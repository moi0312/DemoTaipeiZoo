<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="android:padding">@dimen/paddingS</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TitleText" parent="BaseText">
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <style name="ContentText" parent="BaseText">
        <item name="android:textSize">@dimen/textSizeContent</item>
    </style>

    <!-- ProgressDialog -->
    <style name="ProgressDialog">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>